<h1 class="display-4">Список всего оборудования</h1>

<div
  class="row my-3 justify-content-center align-items-center g-2"
>
  <div class="col-3">

      <% if user_signed_in? %>
        <%= link_to 'Добавить оборудование', new_equipment_path, class: "btn btn-success" %>
      <% end %>
    
  </div>
  <div class="col-3">

  </div>
  <div class="col-3">

  </div>
  <div class="col-3">
  
  </div>

</div>



<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Наименование</th>
      <th class="text-center" scope="col">Производитель</th>
      <th class="text-center" scope="col">Артикул</th>
      <th class="text-center" scope="col">Описание</th>
      <th class="text-center" scope="col">Количество</th>
      <% if current_user&.admin_role? %>
        <th class="text-center" scope="col">Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <%= render partial: "equipment", collection: @equipments %>
  </tbody>
</table>
