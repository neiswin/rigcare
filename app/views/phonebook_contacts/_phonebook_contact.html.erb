
<div class="my-1" id="<%= dom_id phonebook_contact%>" >
  <div class="accordion-item">
    <h2 class="accordion-header">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-<%= dom_id phonebook_contact%>" aria-expanded="false" aria-controls="panelsStayOpen-<%= dom_id phonebook_contact%>">
       <p class="lead">
           <%= phonebook_contact.department %> \ <%= phonebook_contact.first_name %> <%= phonebook_contact.last_name %> 
       </p> 
      </button>
    </h2>
    <div id="panelsStayOpen-<%= dom_id phonebook_contact%>" class="accordion-collapse collapse">
      <div class="accordion-body">
        <p class="lead">
            Stationarphone: <%= phonebook_contact.landline_phone_1 %>
        </p>
        <p class="lead">
            Personal: <%= phonebook_contact.personal_mobile_phone_1 %>
        </p>     
      </div>
    </div>
  </div>
</div>