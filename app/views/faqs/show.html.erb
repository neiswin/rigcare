

<h1 class="text-center display-4"><%= @faq.title %></h1>
  
  <div class="card">
  
    <div class="card-body">
      <h5 class="card-title">Вопрос: <%= @faq.title %></h5>
      <p class="card-text">Тип буровой установки: <%= @faq.rig.rig_type %></p>
      <p class="card-text">Описание: <%= @faq.body %></p>
    </div>

    <div class="card-footer text-muted">
      <div class="row justify-content-center align-items-center g-2">
        <div class="col"><p class="card-text">Добавлена: <%= @faq.created_at %></p></div>
        <div class="col"><p class="card-text">Автор: <%= link_to "#{@faq.user.first_name} #{@faq.user.last_name}", user_path(@faq.user.id)  %>  </p></div>
        <div class="col text-end">
          <div class="btn-group" role="group" aria-label="Basic example">
              <% if user_signed_in? %>
                  <%= link_to 'Изменить', edit_faq_path(@faq), method: :get, class: "btn btn-warning" %> 
              <% end %>

            
                  <%= link_to "Удалить", faq_path(@faq),  'data-turbo-method': :delete,  data: { confirm: 'Are you sure?'}, class: "btn btn-danger"  %>  
           
          </div>
        </div>
      </div>
    </div>
  </div>